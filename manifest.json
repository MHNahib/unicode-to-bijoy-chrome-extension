{
    "manifest_version": 3,
    "name": "Unicode to Bijoy Converter",
    "version": "1.0",
    "description": "Converts Unicode text to Bijoy ANSI and copies to clipboard.",
    "permissions": [
        "clipboardWrite"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}